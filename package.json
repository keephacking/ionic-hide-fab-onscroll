{
    "name": "ionic-hide-fab-onscroll",
    "version": "0.1.0",
    "description": "A simple plugin to hide the ionic fab buttons while scrolling",
    "main": "index.js",
    "scripts": {
        "copy:package": "copyfiles -f ./src/package.json ./build",
        "copy:build": "copyfiles -e ./build/*.js  -f ./build/*.ts -f ./build/*.json ./dist",
        "prebuild": "rimraf ./dist ./build",
        "es5": "ngc -p ./src/tsconfig-es5.json",
        "es2015": "ngc -p ./src/tsconfig-es2015.json",
        "build": "npm run es5 && npm run es2015 && npm run copy:package",
        "dist": "npm run build && rollup -c && npm run copy:build"
    },
    "keywords": [
        "angular5",
        "ionic3",
        "ionic2",
        "fab"
    ],
    "author": "Sachin M S",
    "repository": {
        "type": "git",
        "url": "https://github.com/keephacking/ionic-hide-fab-onscroll.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@angular/core": "^5.1.2",
        "@angular/forms": "^5.1.2",
        "@angular/platform-browser": "^5.1.2",
        "rxjs": "^5.5.6",
        "zone.js": "^0.8.18",
        "@angular/common": "^5.1.2",
        "@angular/compiler": "^5.1.2",
        "@angular/compiler-cli": "^5.1.2",
        "typescript": "^2.6.2",
        "ionic-angular": "^3.9.2",
        "rollup": "^0.53.0",
        "copyfiles": "^1.2.0"
    }
}